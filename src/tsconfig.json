{
    "compilerOptions": {
        "declaration": true,
        "target": "esnext",
        "module": "UMD",
        "outDir": "../build",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "strictPropertyInitialization": false
    },
    "include": [
        "**/*.ts"
    ],
    "exclude": [
        "../node_modules/*"
    ]
}