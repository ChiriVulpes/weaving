{
    "compilerOptions": {
        "target": "esnext",
        "module": "UMD",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "strictPropertyInitialization": false,
        "types": ["mocha", "node"]
    },
    "include": [
        "**/*.ts"
    ]
}