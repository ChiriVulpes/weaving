{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "plugins": [
            {
                "name": "typescript-tslint-plugin"
            }
        ],
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "strictPropertyInitialization": false,
        "types": ["mocha"]
    },
    "include": [
        "**/*.ts"
    ]
}